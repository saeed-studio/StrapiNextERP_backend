            "type": "string"
        },
        "customer_email": {
            "type": "string",
            "required": false,
            "unique": false
        },
        "customer_phone": {
            "type": "string",
            "required": false,
            "unique": false
        },
        "date": {
            "type": "datetime"
        },
        "products": {
            "type": "component",
            "component": "shared.sale-item",
            "repeatable": true
        },
        "subtotal": {
            "type": "decimal"
        },
        "tax_amount": {
            "type": "decimal"
        },
        "discount_amount": {
            "type": "decimal",
